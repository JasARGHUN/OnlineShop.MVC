@model Order

<h2>Checkout</h2>

<div class="card border-0" style="min-height:100vh;">
    <form asp-action="Checkout" method="post">
        <div class="form-group">
            <label>Your name:</label><br /><span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control" />
        </div>
        <h3>Адрес</h3>
        <div class="form-group">
            <label>Address:</label><br /><span asp-validation-for="Line1" class="text-danger"></span>
            <input asp-for="Line1" class="form-control" />
        </div>
        <div class="form-group">
            <label>Post address:</label><br /><span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Your City:</label><br /><span asp-validation-for="City" class="text-danger"></span>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
            <label>Phone number:</label><br /><span asp-validation-for="Phone" class="text-danger"></span>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group">
            <label>Post index:</label><br /><span asp-validation-for="Zip" class="text-danger"></span>
            <input asp-for="Zip" class="form-control" />
        </div>
        <br />
        <div class="text-center">
            <hr />
            <a class="btn btn-primary" asp-action="Index" asp-controller="Cart">Back</a>
            <input class="btn btn-success" type="submit" value="Complete" />
        </div>
    </form>
</div>